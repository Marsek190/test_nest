block content
    .container
        h1= title
        form.form-signin(action="/v1/user/login", method="post")
            h2.form-signin-heading Please sign in
            input.input-block-level(name="email", type="text", placeholder="Email address")
            input.input-block-level(name="password", type="password", placeholder="Password")
            label.checkbox.
                <input type="checkbox" value="remember" /> Remember me
            button.btn.btn-large.btn-primary(type="submit") Sign in